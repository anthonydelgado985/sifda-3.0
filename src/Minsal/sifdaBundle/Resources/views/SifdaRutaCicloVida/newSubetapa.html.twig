{% extends 'MinsalsifdaBundle::layoutResponsable.html.twig' %}
{% block contenido_in -%}
    {{form_start(form)}}
    {{form_errors(form)}}    
        <div class="page-header">
            <center><h3>Registro de la subetapa</h3></center>
            <center><h4>Tipo de servicio: {{etapa.idTipoServicio}}</h4></center>
            <center><h4>Etapa {{etapa.jerarquia}}: {{etapa.descripcion}}</h4></center>
        </div>
        <div class="row-fluid">
            <div class="span12">
                <div class="row-fluid">
                    <div class="span4 offset2">
                        {{form_row(form.descripcion, {'attr': {'class':'input-xlarge', 'placeholder': 'Descripcion de la etapa'} })}}
                        {{form_row(form.jerarquia)}}
                    </div>
                    <div class="span5 offset1">
                        {{form_row(form.peso)}}
                        {{form_row(form.referencia, {'attr': {'class':'input-xlarge', 'placeholder': 'Referencia de la etapa'} })}}
                    </div>
                </div>
                <br>
                <center>
                    <table id="botones">
                    <tr> 
                        <td>{{form_row(form.save_and_add,{'attr':{'class':'btn btn-primary'}})}}</td> 
                        <td>{{form_row(form.save,{'attr':{'class':'btn btn-primary'}})}}</td> 
                        <td><a href="{{ path('sifda_rutaciclovida_show', { 'id': etapa.id })}}" class="btn">Regresar</a></td>
                    </tr>    
                    </table>
                </center>    
            </div>
        </div>        
    {{form_end(form)}}
{% endblock %}
